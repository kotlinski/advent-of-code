{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "build",
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "inlineSources": true,
    "inlineSourceMap": true
  },
  "ts-node": {
    "files": true,
    "useESM": false,
    "transpileOnly": true
  }
}
